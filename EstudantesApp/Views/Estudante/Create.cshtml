@model EstudantesApp.Transporte.EstudanteDTO

@{
    ViewData["Title"] = "Create";
}



<h2 class="text-info">Create Student</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInscrição" class="control-label"></label>
                <input asp-for="FechaInscrição" type="date" class="form-control" />
                <span asp-validation-for="FechaInscrição" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <div class="row">
                    <div class="col-sm-6">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                        </div>
                    <div class="col-sm-6">
                    <a asp-action="Index" class="btn btn-success form-control">Back to list</a>
                    </div>
                </div>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
